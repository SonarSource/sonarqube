<% content_for :script do %>
  <script>
    function fakeFooter() {
      $j('#fake-footer').html("Footer generated by plugin");
    }
  </script>
<% end %>



<% content_for :header do %>
  <div id="fake-header">Header generated by plugin</div>
<% end %>



<% content_for :footer do %>
  <div id="fake-footer"></div>
  <script>
    fakeFooter();
  </script>
<% end %>
