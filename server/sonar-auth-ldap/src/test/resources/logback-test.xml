<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>
        %d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n
      </pattern>
    </encoder>
  </appender>

  <logger name="org.sonar" level="DEBUG"/>

  <logger name="org.apache.directory" level="ERROR"/>

  <root level="INFO">
    <appender-ref ref="STDOUT"/>
  </root>

</configuration>
