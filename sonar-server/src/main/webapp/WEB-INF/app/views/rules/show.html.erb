<h1><%= @rule.name %></h1>
<div class="subtitle">
<%= @rule.plugin_name -%> : <%= @rule.plugin_rule_key -%>
</div>

<div class="doc">
  <% if @rule.description.strip.start_with?('<p>') %>
    <%= interpret_macro @rule.description %>
  <% else %>
    <p><%= @rule.description %></p>
  <% end %>

  <% if @rule.note && !@rule.note.text.strip.blank? %>
    <p><%= @rule.note.html_text -%></p>
  <% end %>

</div>
