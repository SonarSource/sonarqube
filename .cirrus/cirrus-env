export GITHUB_BRANCH=${CIRRUS_BRANCH?}
export GITHUB_REPO=${CIRRUS_REPO_FULL_NAME?}
export PIPELINE_ID=${CIRRUS_BUILD_ID?}
export PULL_REQUEST_SHA=${CIRRUS_BASE_SHA:-}
export PULL_REQUEST=${CIRRUS_PR:-false}
